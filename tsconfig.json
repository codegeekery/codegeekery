{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,  // Habilitar 'noEmit' para usar 'allowImportingTsExtensions'
    "allowImportingTsExtensions": true  // Permitir importar extensiones '.ts'
  }
}
